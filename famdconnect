            <div id="reg-form" class="hidden">
                <h2>Регистрация</h2>
                <input type="text" id="reg-name" class="auth-input" placeholder="Имя пользователя">
                <input type="email" id="reg-email" class="auth-input" placeholder="Email">
                <input type="password" id="reg-password" class="auth-input" placeholder="Пароль (мин. 6 символов)">
                <button class="btn btn-primary" onclick="app.register()">Создать аккаунт</button>
                <button class="btn btn-sec" onclick="document.getElementById('reg-form').classList.add('hidden'); document.getElementById('login-form').classList.remove('hidden')">Назад ко входу</button>
