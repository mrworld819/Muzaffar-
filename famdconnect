    <script>
        // --- CONFIGURATION ---
        // Using credentials from famdconnect.html as requested
        const firebaseConfig = {
            apiKey: "AIzaSyDt04qUBk6fXq58NE9zoA5Q3yWWpk_KK8s",
            authDomain: "famdshop-2196c.firebaseapp.com",
            databaseURL: "https://famdshop-2196c-default-rtdb.firebaseio.com",
            projectId: "famdshop-2196c",
            storageBucket: "famdshop-2196c.firebasestorage.app",
            messagingSenderId: "75598057700",
            appId: "1:75598057700:web:7274d018a585e599381cf1"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();
        const rtdb = firebase.database();
        const storage = firebase.storage();

        class SuperApp {
            constructor() {
                this.currentUser = null;
                this.map = null;
                this.mapMarker = null;
                this.jitsiApi = null;
                this.activeChatId = null;
                this.fileToUpload = null;
                this.setupAuthListener();
            }

            // --- AUTHENTICATION ---
            setupAuthListener() {
                auth.onAuthStateChanged(user => {
                    if (user) {
                        this.currentUser = user;
                        document.getElementById('auth-overlay').style.display = 'none';
                        document.getElementById('user-welcome').innerText = `@${user.displayName || 'user'}`;
                        document.getElementById('current-user-avatar').src = user.photoURL || `https://ui-avatars.com/api/?name=${user.displayName}&background=random`;
                        
                        // Update status in Realtime DB
                        rtdb.ref(`status/${user.uid}`).set({ state: 'online', last_changed: firebase.database.ServerValue.TIMESTAMP });
                        rtdb.ref(`status/${user.uid}`).onDisconnect().set({ state: 'offline', last_changed: firebase.database.ServerValue.TIMESTAMP });

                        // Ensure user exists in Firestore
                        db.collection('users').doc(user.uid).set({
                            uid: user.uid,
                            name: user.displayName,
                            email: user.email,
                            avatar: user.photoURL || `https://ui-avatars.com/api/?name=${user.displayName}&background=random`,
                            lastActive: firebase.firestore.FieldValue.serverTimestamp()
                        }, { merge: true });

                        this.loadFeed();
                        this.initChatList();
                        this.initMap();
                    } else {
                        document.getElementById('auth-overlay').style.display = 'flex';
                    }
                });
            }

            async login() {
                const email = document.getElementById('email').value;
                const pass = document.getElementById('password').value;
                try {
                    await auth.signInWithEmailAndPassword(email, pass);
                } catch (e) { alert("Ошибка: " + e.message); }
            }

            async register() {
                const name = document.getElementById('reg-name').value;
                const email = document.getElementById('reg-email').value;
                const pass = document.getElementById('reg-password').value;
                try {
                    const res = await auth.createUserWithEmailAndPassword(email, pass);
                    await res.user.updateProfile({ displayName: name });
                    // Reload to apply name
                    window.location.reload();
                } catch (e) { alert("Ошибка: " + e.message); }
            }

            logout() { auth.signOut(); }

            // --- NAVIGATION ---
            nav(pageId) {
                document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
                document.getElementById('page-' + pageId).classList.add('active');
                document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
                event.currentTarget.classList.add('active');

                if (pageId === 'map' && this.map) setTimeout(() => this.map.invalidateSize(), 300);
            }

            // --- FEED & POSTS ---
            handleFileSelect(input) {
                const file = input.files[0];
                if (file) {
                    this.fileToUpload = file;
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const img = document.getElementById('upload-preview');
                        img.src = e.target.result;
                        img.style.display = 'block';
                    }
                    reader.readAsDataURL(file);
                }
            }

            async createPost() {
                const text = document.getElementById('post-text').value;
                if (!text && !this.fileToUpload) return;

                const btn = document.querySelector('.create-post-box .btn');
                btn.disabled = true;
                btn.innerText = 'Загрузка...';

                let mediaUrl = null;
                let mediaType = null;

                try {
                    // Upload to Firebase Storage (Replacment for Cloudinary)
                    if (this.fileToUpload) {
                        const ref = storage.ref(`posts/${this.currentUser.uid}/${Date.now()}_${this.fileToUpload.name}`);
                        const snapshot = await ref.put(this.fileToUpload);
                        mediaUrl = await snapshot.ref.getDownloadURL();
                        mediaType = this.fileToUpload.type.startsWith('video') ? 'video' : 'image';
                    }

                    await db.collection('posts').add({
                        text: text,
                        mediaUrl: mediaUrl,
                        mediaType: mediaType,
                        userId: this.currentUser.uid,
                        userName: this.currentUser.displayName,
                        userAvatar: this.currentUser.photoURL,
                        createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                        likes: []
                    });

                    // Reset form
                    document.getElementById('post-text').value = '';
                    document.getElementById('upload-preview').style.display = 'none';
                    this.fileToUpload = null;
                } catch (e) {
                    console.error(e);
                    alert('Ошибка публикации: ' + e.message);
                } finally {
                    btn.disabled = false;
                    btn.innerText = 'Опубликовать';
                }
            }

            loadFeed() {
                db.collection('posts').orderBy('createdAt', 'desc').limit(50).onSnapshot(snap => {
                    const container = document.getElementById('feed-container');
                    container.innerHTML = '';
                    snap.forEach(doc => {
                        const post = doc.data();
                        const isLiked = post.likes && post.likes.includes(this.currentUser.uid);
                        
                        let mediaHtml = '';
                        if (post.mediaUrl) {
                            if (post.mediaType === 'video') {
                                mediaHtml = `<video src="${post.mediaUrl}" controls class="post-media"></video>`;
                            } else {
                                mediaHtml = `<img src="${post.mediaUrl}" class="post-media" loading="lazy">`;
                            }
                        }

                        const el = document.createElement('div');
                        el.className = 'post-card';
                        el.innerHTML = `
                            <div style="display:flex; gap:10px; align-items:center;">
                                <img src="${post.userAvatar || 'https://via.placeholder.com/40'}" class="avatar" style="width:40px;height:40px;">
                                <div>
                                    <b>${post.userName}</b>
                                    <div style="font-size:12px; color:var(--text-sec);">${post.createdAt ? new Date(post.createdAt.toDate()).toLocaleDateString() : 'Just now'}</div>
                                </div>
                            </div>
                            <div class="post-content">${post.text || ''}</div>
                            ${mediaHtml}
                            <div class="post-stats">
                                <div class="stat-item ${isLiked ? 'liked' : ''}" onclick="app.toggleLike('${doc.id}', ${!isLiked})">
                                    <i class="${isLiked ? 'fas' : 'far'} fa-heart"></i> ${post.likes ? post.likes.length : 0}
                                </div>
                                <div class="stat-item"><i class="far fa-comment"></i> Коммент.</div>
                                <div class="stat-item"><i class="fas fa-share"></i> Поделиться</div>
                            </div>
                        `;
                        container.appendChild(el);
                    });
                });
            }

            async toggleLike(postId, doLike) {
                const ref = db.collection('posts').doc(postId);
                if (doLike) {
                    await ref.update({ likes: firebase.firestore.FieldValue.arrayUnion(this.currentUser.uid) });
                } else {
                    await ref.update({ likes: firebase.firestore.FieldValue.arrayRemove(this.currentUser.uid) });
                }
            }

            // --- CHAT SYSTEM ---
            initChatList() {
                // Listen to all users for demo purposes (In real app, friends only)
                db.collection('users').limit(20).onSnapshot(snap => {
                    const list = document.getElementById('users-list');
                    list.innerHTML = '';
                    snap.forEach(doc => {
                        const user = doc.data();
                        if (user.uid === this.currentUser.uid) return;
                        
                        const el = document.createElement('div');
                        el.className = 'chat-item';
                        el.onclick = () => this.openChat(user);
                        el.innerHTML = `
                            <img src="${user.avatar}" class="avatar" style="width:40px;height:40px;">
                            <div>
                                <b>${user.name}</b>
                                <div style="font-size:12px; color:var(--text-sec);">Нажмите, чтобы написать</div>
                            </div>
                        `;
                        list.appendChild(el);
                    });
                });
            }

            searchUsers(query) {
                // Client-side filtering for simplicity in this demo
                const items = document.querySelectorAll('.chat-item');
                items.forEach(item => {
                    const name = item.querySelector('b').innerText.toLowerCase();
                    item.style.display = name.includes(query.toLowerCase()) ? 'flex' : 'none';
                });
            }

            openChat(user) {
                this.activeChatId = [this.currentUser.uid, user.uid].sort().join('_');
                
                // UI Toggle
                document.getElementById('chat-placeholder').classList.add('hidden');
                document.getElementById('active-chat').classList.remove('hidden');
                document.getElementById('chat-header-name').innerText = user.name;
                
                // Mobile handling
                if(window.innerWidth <= 768) {
                    document.getElementById('chat-list-panel').classList.remove('mobile-show');
                    document.getElementById('chat-list-panel').style.display = 'none';
                    document.getElementById('chat-view').style.display = 'flex';
                }

                // Load messages (Realtime DB)
                const container = document.getElementById('messages-container');
                container.innerHTML = '';
                rtdb.ref(`chats/${this.activeChatId}`).limitToLast(50).on('child_added', snap => {
                    const msg = snap.val();
                    const div = document.createElement('div');
                    div.className = `message ${msg.sender === this.currentUser.uid ? 'msg-me' : 'msg-other'}`;
                    div.innerText = msg.text;
                    container.appendChild(div);
                    container.scrollTop = container.scrollHeight;
                });
            }

            sendMessage() {
                const input = document.getElementById('msg-input');
                const text = input.value.trim();
                if (!text || !this.activeChatId) return;
                
                rtdb.ref(`chats/${this.activeChatId}`).push({
                    text: text,
                    sender: this.currentUser.uid,
                    timestamp: firebase.database.ServerValue.TIMESTAMP
                });
                input.value = '';
            }

            toggleMobileChat() {
                document.getElementById('chat-list-panel').style.display = 'block';
                document.getElementById('chat-view').style.display = 'none';
            }

            // --- MAP SYSTEM ---
            initMap() {
                if (this.map) return;
                
                this.map = L.map('map-container').setView([0, 0], 2);
                L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
                    maxZoom: 19
                }).addTo(this.map);

                // Track own location
                if (navigator.geolocation) {
                    navigator.geolocation.watchPosition(pos => {
                        const lat = pos.coords.latitude;
                        const lng = pos.coords.longitude;
                        
                        // Update DB
                        db.collection('users').doc(this.currentUser.uid).update({
                            location: { lat, lng }
                        });

                        // Move my marker
                        if (!this.mapMarker) {
                            const icon = L.divIcon({
                                className: 'custom-icon',
                                html: `<div style="width:15px;height:15px;background:var(--primary);border-radius:50%;border:2px solid white;box-shadow:0 0 10px var(--primary);"></div>`
                            });
                            this.mapMarker = L.marker([lat, lng], {icon}).addTo(this.map);
                            this.map.setView([lat, lng], 14);
                        } else {
                            this.mapMarker.setLatLng([lat, lng]);
                        }
                    });
                }

                // Show others
                db.collection('users').onSnapshot(snap => {
                    // Clear existing (simple implementation)
                    this.map.eachLayer(layer => {
                        if (layer instanceof L.Marker && layer !== this.mapMarker) {
                            this.map.removeLayer(layer);
                        }
                    });

                    snap.forEach(doc => {
                        const u = doc.data();
                        if (u.uid === this.currentUser.uid || !u.location) return;
                        
                        const icon = L.divIcon({
                            className: 'friend-icon',
                            html: `<img src="${u.avatar}" style="width:30px;height:30px;border-radius:50%;border:2px solid white;">`
                        });
                        L.marker([u.location.lat, u.location.lng], {icon})
                         .bindPopup(u.name)
                         .addTo(this.map);
                    });
                });
            }

            centerMap() {
                if(this.mapMarker) this.map.flyTo(this.mapMarker.getLatLng(), 15);
            }

            // --- CALL SYSTEM ---
            startCall() {
                const roomName = document.getElementById('room-name').value.replace(/[^a-zA-Z0-9]/g, '') || 'room-' + Math.random().toString(36).substr(2,9);
                const domain = 'meet.guifi.net'; // Using the server from call.html
                const options = {
                    roomName: roomName,
                    width: '100%',
                    height: '100%',
                    parentNode: document.querySelector('#meet-frame'),
                    userInfo: { displayName: this.currentUser.displayName },
                    configOverwrite: { startWithAudioMuted: true, startWithVideoMuted: true }
                };
                
                document.getElementById('call-setup').classList.add('hidden');
                document.getElementById('meet-frame').classList.remove('hidden');
                
                this.jitsiApi = new JitsiMeetExternalAPI(domain, options);
                this.jitsiApi.addEventListeners({
                    videoConferenceLeft: () => {
                        this.jitsiApi.dispose();
                        document.getElementById('call-setup').classList.remove('hidden');
                        document.getElementById('meet-frame').classList.add('hidden');
                    }
                });
            }
        }

        const app = new SuperApp();
    </script>
</body>
</html>
