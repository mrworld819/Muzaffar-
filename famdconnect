    <main class="main-container">
        
        <div id="page-feed" class="page active">
            <div class="feed-header">
                <h2>Главная</h2>
                <div style="font-size: 14px; color: var(--text-sec);" id="user-welcome"></div>
            </div>
            
            <div class="create-post-box">
                <img src="https://via.placeholder.com/48" id="current-user-avatar" class="avatar">
                <div style="flex: 1;">
                    <textarea id="post-text" class="post-input" rows="2" placeholder="Что нового?"></textarea>
                    <img id="upload-preview" class="media-preview">
